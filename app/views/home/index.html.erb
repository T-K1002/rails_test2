<section class="section">
  <div class="media">
    <div class="media-content">
      <div class="content has-text-centered">
        <p>
          <strong class="is-size-1" style="font-family: monospace">Travel Share</strong>
        </p>
      </div>
      <div class="columns is-centered">
        <%= form_with(url: search_rooms_path, local: true, method: :get ) do |f| %>
          <div class="is-size-3">
            <%= f.text_field :search_area, placeholder: "エリア名を入力" ,class: "input" %>
          </div>
          <div class="has-text-right">
            <%= f.submit "検索" , class: "button is-link" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
  
