<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        登録施設一覧
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @rooms.each do |room| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to room_path(room) do %>
                  <%= attachment_image_tag room, :image,  fallback: "hotel.png" %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media is-size-4" style="font-family: monospace">
              <%= room.name %>
              </div>
              <div class="content">
              料金：<%= room.price %>円
              </div>
              <div class="content">
              住所：<%= room.adress %>
              </div>
              <div class="content">
              詳細：<%= room.detail %>
              </div>
              <div class="content">
                <time><%= room.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>